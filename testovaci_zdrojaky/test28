--[[ spatne exp cislo ]]
function main() --Hlavni telo programu
	local a;
	local vysl=25e-+3;

	write("Zadejte cislo pro vypocet faktorialu\n");
	a = read("*n");

	if a < 0 then
		write("Faktorial nelze spocitat\n");
	else
		vysl = 1;

		while a > 0 do
			vysl = vysl * a;
			a = a - 1;
		end;

		write("Vysledek je: ", vysl, "\n");
	end;
end;

